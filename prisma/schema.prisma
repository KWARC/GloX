generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Document {
  id       String @id @default(uuid())
  filename String
  fileHash String @unique
  mimeType String
  fileSize Int

  userId String
  user   User   @relation(fields: [userId], references: [id])

  status      DocumentStatus @default(UPLOADED)
  pages       DocumentPage[]
  definitions Definition[]
  latexTables LatexTable[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DocumentPage {
  id         String   @id @default(uuid())
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  pageNumber Int
  text       String @db.Text

  definitions Definition[]

  createdAt DateTime @default(now())

  @@unique([documentId, pageNumber])
  @@index([documentId])
}

enum DocumentStatus {
  UPLOADED
  TEXT_EXTRACTED
  FAILED
}

enum SymbolicRefSource {
  MATHHUB
  DEFINIENDUM
}

model User {
  id           String     @id @default(uuid())
  firstName    String?
  lastName     String?
  email        String     @unique
  passwordHash String?
  createdAt    DateTime   @default(now())
  documents    Document[]
}

model Symbol {
  id String @id @default(uuid())

  symbolName String
  alias      String?

  futureRepo String
  filePath   String
  fileName   String
  language   String @default("en")

  resolvedUri String?

  definitionSymbols  DefinitionSymbol[]
  symbolicReferences SymbolicReference[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([symbolName, futureRepo, filePath, fileName, language])
  @@index([symbolName])
  @@index([resolvedUri])
}

model SymbolicReference {
  id         String @id @default(uuid())
  name       String
  conceptUri String
  archive    String
  filePath   String
  fileName   String
  language   String @default("en")

  definiendumId String?
  definiendum   Symbol? @relation(fields: [definiendumId], references: [id], onDelete: Cascade)

  definitions DefinitionSymbolicRef[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([definiendumId])
  @@index([archive, filePath, fileName, conceptUri, language])
}

model Definition {
  id String @id @default(uuid())

  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  documentPageId String
  documentPage   DocumentPage @relation(fields: [documentPageId], references: [id], onDelete: Cascade)

  pageNumber Int

  originalText String @db.Text
  statement    Json

  definitionSymbols DefinitionSymbol[]
  symbolicRefs      DefinitionSymbolicRef[]

  futureRepo String @default("Glox")
  filePath   String @default("Glox")
  fileName   String @default("Glox")
  language   String @default("en")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([documentPageId])
  @@index([documentId])
  @@index([futureRepo, filePath, fileName, language])
}

model LatexTable {
  id String @id @default(uuid())

  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  futureRepo String
  filePath   String
  fileName   String
  language   String

  finalLatex String  @db.Text
  history    Json    @db.JsonB
  isFinal    Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([documentId, futureRepo, filePath, fileName, language])
}

model DefinitionSymbolicRef {
  id String @id @default(uuid())

  definitionId String
  definition   Definition @relation(fields: [definitionId], references: [id], onDelete: Cascade)

  symbolicReferenceId String
  symbolicReference   SymbolicReference @relation(fields: [symbolicReferenceId], references: [id], onDelete: Cascade)

  source SymbolicRefSource

  createdAt DateTime @default(now())

  @@unique([definitionId, symbolicReferenceId])
  @@index([definitionId])
  @@index([symbolicReferenceId])
}

model DefinitionSymbol {
  id String @id @default(uuid())

  definitionId String
  definition   Definition @relation(fields: [definitionId], references: [id], onDelete: Cascade)

  symbolId String
  symbol   Symbol @relation(fields: [symbolId], references: [id], onDelete: Cascade)

  isDeclared Boolean @default(false)

  createdAt DateTime @default(now())

  @@unique([definitionId, symbolId])
  @@index([definitionId])
  @@index([symbolId])
}
