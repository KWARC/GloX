generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Document {
  id       String @id @default(uuid())
  filename String
  fileHash String @unique
  mimeType String
  fileSize Int
  userId   String
  user     User   @relation(fields: [userId], references: [id])

  status DocumentStatus @default(UPLOADED)
  pages  DocumentPage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DocumentPage {
  id         String   @id @default(uuid())
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  pageNumber Int
  text       String @db.Text

  createdAt DateTime @default(now())

  @@unique([documentId, pageNumber])
  @@index([documentId])
}

enum DocumentStatus {
  UPLOADED
  TEXT_EXTRACTED
  FAILED
}

model User {
  id           String     @id @default(uuid())
  name         String?
  email        String     @unique
  passwordHash String
  createdAt    DateTime   @default(now())
  documents    Document[]
}

model Definiendum {
  id   String @id @default(uuid())
  name String

  futureRepo String @default("Glox")
  filePath   String @default("Glox")

  definitions Definition[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([futureRepo])
}

model Definition {
  id   String @id @default(uuid())
  name String

  concept  String @default("Glox")
  archive  String @default("Glox")
  filePath String @default("Glox")
  fileName String @default("Glox")

  definiendumId String
  definiendum   Definiendum @relation(fields: [definiendumId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([definiendumId])
  @@index([archive, filePath, fileName, concept])
}
